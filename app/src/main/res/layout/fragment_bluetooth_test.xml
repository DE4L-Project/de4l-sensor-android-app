<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BluetoothTestFragment">

    <Button
        android:id="@+id/btnConnectBtTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect (Single)"
        app:layout_constraintBottom_toTopOf="@+id/btnConnectBtRetryTest"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConnectBtRetryTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect Retry"
        app:layout_constraintBottom_toTopOf="@+id/btnDisconnectBtTest"
        app:layout_constraintTop_toBottomOf="@+id/btnConnectBtTest" />

    <Button
        android:id="@+id/btnDisconnectBtTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        app:layout_constraintBottom_toTopOf="@+id/btnScan"
        app:layout_constraintTop_toBottomOf="@+id/btnConnectBtRetryTest" />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        app:layout_constraintTop_toBottomOf="@+id/btnDisconnectBtTest" />
</androidx.constraintlayout.widget.ConstraintLayout>