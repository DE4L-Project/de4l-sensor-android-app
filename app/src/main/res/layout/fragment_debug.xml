<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <Button
        android:id="@+id/btnAirBeam3TestDebug"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Test Airbeam3 Connection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDebugConnectionInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Empty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAirBeam3TestDebug" />

    <Button
        android:id="@+id/btnAirbeam2Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airbeam2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDebugAb2" />

    <Button
        android:id="@+id/btnAirBeam3Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airbeam3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDebugAb3" />

    <Button
        android:id="@+id/btnConnectionLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Connection Loss"
        app:layout_constraintStart_toEndOf="@+id/btnAirbeam2Status"
        app:layout_constraintTop_toTopOf="@+id/btnAirbeam2Status" />

    <TextView
        android:id="@+id/tvDebugAb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAirbeam2Status" />

    <TextView
        android:id="@+id/tvDebugAb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDebugConnectionInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>