<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblBluetoothDeviceManagerScanJobQueue"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="ScanJobQueue" />

            <TextView
                android:id="@+id/tvBluetoothDeviceManagerScanJobQueue"
                android:layout_width="275dp"
                android:layout_height="match_parent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblBluetoothScanState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BluetoothScanState" />

            <TextView
                android:id="@+id/tvBluetoothScanState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>